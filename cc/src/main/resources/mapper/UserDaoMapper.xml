<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hp.cc.mapper.UserDao">
	<resultMap id="userMap" type="com.hp.cc.entity.SysUser">
		<id property="id" jdbcType="INTEGER" column="id" />
		<result property="username" jdbcType="VARCHAR" column="username" />
		<result property="password" jdbcType="VARCHAR" column="password" />
		<result property="enabled" jdbcType="TINYINT" column="enabled" />
		<!-- <result property="createDate" jdbcType="TIMESTAMP" column="createDate" />
		<result property="updateDate" jdbcType="TIMESTAMP" column="updateDate" /> -->
		<collection property="roles" ofType="com.hp.cc.entity.SysRole">
			<result column="id" jdbcType="INTEGER" property="id" />
			<result column="name" jdbcType="VARCHAR" property="name" />
			<result property="createDate" jdbcType="TIMESTAMP" column="createDate" />
			<result property="updateDate" jdbcType="TIMESTAMP" column="updateDate" />
		</collection>

	</resultMap>

	<select id="findByUserName" parameterType="String" resultMap="userMap">
		select u.*
		,r.id,r.name
		from SYS_USER u
		LEFT JOIN SYS_ROLE_USER sru on u.id= sru.SYS_USER_ID
		LEFT JOIN SYS_ROLE r on sru.ROLES_ID=r.id
		where username= #{username}
	</select>
</mapper>
